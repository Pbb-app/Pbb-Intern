<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.riseinsteps.packbagbuddy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".PackbagBuddyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PackBagBuddy">
        <activity android:name=".RefundTripActivity"></activity>
        <activity android:name=".RulesTripActivity" />
        <activity android:name=".ChatBot" />
        <activity android:name=".AllPopularSportActivity" />
        <activity android:name=".AllAdventureTripActivity" />
        <activity android:name=".LatestOffersActivity" />
        <activity android:name=".BookingsActivity" />
        <activity android:name=".ExploreIndiaActivity" />
        <activity android:name=".CreateTourActivity" />
        <activity
            android:name=".TermsAndConditionActivity"
            android:parentActivityName=".LegalPolicyActivity" />
        <activity
            android:name=".CopyRightPolicyActivity"
            android:parentActivityName=".LegalPolicyActivity" />
        <activity
            android:name=".CancellationAndRefundPolicyActivity"
            android:parentActivityName=".LegalPolicyActivity" />
        <activity
            android:name=".PrivacyPolicyActivity"
            android:parentActivityName=".LegalPolicyActivity" />
        <activity android:name=".LeaveYourInfo" />
        <activity android:name=".model.RulesAndRegulations" />
        <activity android:name=".UserForgotPassword" />
        <activity android:name=".TourDetails" />
        <activity android:name=".PopularSportDetailActivity" />
        <activity android:name=".AdventureTripDetailActivity" />
        <activity android:name=".PopularSportActivity" />
        <activity android:name=".AdventureTripActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>